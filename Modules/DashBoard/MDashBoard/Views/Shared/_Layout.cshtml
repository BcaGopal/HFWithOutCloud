                            @foreach (var item in (List<ProjLib.ViewModels.UserBookMarkViewModel>)(Session["BookMarks"]))
                            {
                                <li>
                                    <a href="/Menu/DropDown/@item.MenuId">
                                        <span class="@item.IconName"></span>
