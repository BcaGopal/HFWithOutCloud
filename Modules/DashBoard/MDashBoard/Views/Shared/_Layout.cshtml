    <div class="container body-content">

        <div class="row">

            <div class="content">
                <div id="divRenderBody" class="main-content">

                    @RenderBody()

                </div>
                <!-- /main-content -->
            </div>
        </div>       
        
      
    </div>

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    
    @RenderSection("scripts", required: false)
</body>
</html>
