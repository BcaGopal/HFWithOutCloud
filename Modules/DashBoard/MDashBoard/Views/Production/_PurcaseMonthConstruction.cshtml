@{
    double? TotalPurchase=0;  
    if(Model.Month.Count>0)
    {
        TotalPurchase = Model.Month.Sum(m => m.Area); 
    }
    if(Model.Construction.Count>0)
    {
        TotalPurchase = Model.Construction.Sum(m => m.Area); 
    }
  }



@functions
{
   
 public string SpanColor(double? Value,double? Total)
    {
     string Color = null;
     double? divided=0;
     divided = (Value / Total) * 100;
         
     if (divided > 0 && divided <= 25)
     {
         Color ="bg-red";
     }
     else if (divided > 25 && divided <= 50)
     {
         Color = "bg-yellow";
     }
     else if (divided > 50 && divided <= 75)
     {
         Color = "bg-blue";
     }
     else if (divided > 75 && divided <= 100)
     {
         Color = "bg-green";
     }
   return Color; 
 }
}

