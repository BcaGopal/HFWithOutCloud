@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@ViewBag.ProductTypeId


@using (Html.BeginForm("GetProductTransactionDetail", "ExcessInventoryAnalysis", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <input type="hidden" name="id" value="@ViewBag.id" />
    
    
    <div class="panel panel-default">
        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"> <span ></span>Excess Inventory Analysis</span>
              
            </h3>

            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
            </div>

        </div>
        <div class="panel-info" style="padding-left:15px">
            <div class="form-horizontal">

                
                <h4 class="black"></h4><p>
                    <table class="table table-responsive table-hover" style="max-width:60%">
                        <tr style="border-bottom:thin solid #dbd1d1" >
                            <td>
                                Product
                            </td>
                            <td colspan="2">
                                <input class="form-control required" data-val="true" id="ProductId" name="ProductId" type="text">
                            </td>
                        </tr>

                    </table>
                </p>

                <div class="form-group">
                    @*@Html.Label("", "Select File", new { @class = "control-label file-input-button" })*@
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="submit" value="Submit" class="btn btn-primary fileinput-button" id="submit" style="width: 90px; background-color: #2980b9" />
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    CustomSelectFunction($("#ProductId"), '/ComboHelpList/GetProducts', '/ComboHelpList/SetSingleProducts', ' ', false, 0);
    
 </script>