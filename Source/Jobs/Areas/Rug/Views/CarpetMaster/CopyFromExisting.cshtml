@model Model.ViewModels.CopyFromExistingDesignViewModel


@using Core.Common

<div class="modal-content">
    <div class="modal-header" style="border-bottom: 1px solid #8E8888">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <span class="glyphicon glyphicon-remove"></span></button>
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span>Add To Existing Contact</span>
        </h3>
    </div>
    <div>


        @using (Html.BeginForm("CopyFromExisting", "CarpetMaster", FormMethod.Post, new { @class = "modal-form", id = "modform" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">

                            @Html.LabelFor(model => model.ProductGroupId, "Copy From Design", new { @class = "control-label col-xs-4 " })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.ProductGroupId, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.ProductGroupId, "", new { @class = "text-danger" })
                            </div>
                        </div>                       
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">

                            @Html.LabelFor(model => model.ProductGroupName, "New Design Name", new { @class = "control-label col-xs-4 " })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.ProductGroupName, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.ProductGroupName, "", new { @class = "text-danger" })
                            </div>
                        </div>                       
                    </div>
                </div>
                <div class="modal-footer " style="padding: 0px 20px 0 20px; border-top:1px solid #8E8888">
                    <button class="btn custom right" name="Command:submit" type="submit"><h2 style="margin:0px" id="submit"><span class="glyphicon glyphicon-floppy-disk black"></span> </h2></button>
                </div>
            </div>
        }
    </div>
</div>


<script type="text/javascript">
    //For Multi Selection Help
    CustomSelectFunction($("#ProductGroupId"), '/ComboHelpList/GetProductGroup', '/ComboHelpList/SetSingleProductGroup', ' ', false, 0);
</script>