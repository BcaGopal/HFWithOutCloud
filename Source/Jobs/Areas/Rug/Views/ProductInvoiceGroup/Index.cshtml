                </ul>
            </div>
        </div>

    </div>
    <div class="panel-info" style="padding-left:5px;padding-top:2px">
        @Html.Grid(Model).Columns(columns =>
   {
       columns.Add(foo => foo.ProductInvoiceGroupId, true);
       columns.Add(foo => foo.ProductInvoiceGroupName).Sortable(true).Titled("Name").Filterable(true);
       columns.Add(m => m.ItcHsCode).Sortable(true).Titled("Code").Filterable(true);
       columns.Add(m => m.IsActive).Sortable(true).Titled("Is Active").Filterable(true);
       columns.Add(true).RenderValueAs(m => "<a href='/Rug/ProductInvoiceGroup/Edit/" + m.ProductInvoiceGroupId + "' hidden class='RecEditurl'></a><a href='/ProductInvoiceGroup/Delete/" + m.ProductInvoiceGroupId + "' hidden class='RecDelurl'></a>");
   }).WithPaging(25).EmptyText("No records found.")
    </div>
</div>
<script type="text/javascript">

    $('table.grid-table td').dblclick(function () {
        var $this = $(this);
        var row = $this.closest("tr");
        var editid = row.find('[data-name="ProductInvoiceGroupId"]').text();
        var url = '@Url.Action("Edit", "ProductInvoiceGroup")' + "/" + editid;
        window.location.href = url;

    });

    $('a#DeleteRecord').click(function (e) {
      
        var tes = DeleteValidation();
        if (!tes) {
            e.stopImmediatePropagation();
            return false;
        }
        var editiiid = $('table.grid-table .grid-row.grid-row-selected').find('[data-name="ProductInvoiceGroupId"]').text();


        var url = '/ProductInvoiceGroup/Delete/' + editiiid;
        $(this).attr('href', url);
        return;
    })
    $('#myModal').on('shown.bs.modal', function () {
        $("#Reason").focus();
    });
</script>