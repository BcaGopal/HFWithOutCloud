                        $("#LotNo").attr('readonly', 'true');
                    }
                    else{
                        $("#StockInBalanceQty").val(0);
                        $("#LotNo").val("");
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve Stock In details.' + thrownError);
                    ProcessProgress.hide();
                }
            });

        }
