        function Validate_StockIn() {
            var ProcessProgress = $("#Stock In detail loading progress");
            ProcessProgress.show();
            if ($("#StockInId").val() != "")
            {
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("GetStockInDetailJson"))",
                    data: { StockInId: $("#StockInId").val()},
