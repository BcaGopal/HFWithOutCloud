@model Model.ViewModels.SaleEnquiryLineViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Post", "SaleEnquiryProductMapping", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
     @Html.HiddenFor(model => model.SaleEnquiryLineId)
    @Html.HiddenFor(model => model.SaleEnquiryHeaderId)

    <div class="panel panel-default">

        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Sale Enquiry Product Mapping</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                @*<h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "PrevPage", "SaleEnquiryProductMapping", new { id = @Model.SaleEnquiryLineId }, new { @class = "glyphicon glyphicon-arrow-left toolbar", @title = "Prev Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "NextPage", "SaleEnquiryProductMapping", new { id = @Model.SaleEnquiryLineId }, new { @class = "glyphicon glyphicon-arrow-right toolbar", @title = "Next Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "Index", "SaleEnquiryProductMapping", null, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })                    
                </h4>*@
                <div class="btn-group">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "cbtn btn-circle glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "PrevPage", "SaleEnquiryProductMapping", new { id = @Model.SaleEnquiryLineId }, new { @class = "cbtn btn-circle glyphicon glyphicon-arrow-left toolbar", @title = "Prev Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "NextPage", "SaleEnquiryProductMapping", new { id = @Model.SaleEnquiryLineId }, new { @class = "cbtn btn-circle glyphicon glyphicon-arrow-right toolbar", @title = "Next Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "Index", "SaleEnquiryProductMapping", null, new { @class = "cbtn btn-circle glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })
                </div>
            </div>

        </div>
        <div class="panel-info" style="padding-left:15px">

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m => m.BuyerSku)
                @Html.HiddenFor(m => m.BuyerUpcCode )

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.SaleEnquiryDocNo, "Enquiry No", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.SaleEnquiryDocNo, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.SaleEnquiryDocNo, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.SaleToBuyerId, "Buyer", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.SaleToBuyerId, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.SaleToBuyerId, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" >
                            @Html.LabelFor(model => model.BuyerSpecification, (Model.ProductBuyerSettings.BuyerSpecificationDisplayName != "" ? Model.ProductBuyerSettings.BuyerSpecificationDisplayName : "Specification"), new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.BuyerSpecification, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.BuyerSpecification, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group" >
                            @Html.LabelFor(model => model.BuyerSpecification1, (Model.ProductBuyerSettings.BuyerSpecification1DisplayName != "" ? Model.ProductBuyerSettings.BuyerSpecification1DisplayName : "Specification-1"), new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.BuyerSpecification1, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.BuyerSpecification1, null, new { @class = "has-error" })
                                <span id="SizeinFeet"> @ViewBag.SizeinFeet </span> 
                            </div> 
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" >
                            @Html.LabelFor(model => model.BuyerSpecification2, (Model.ProductBuyerSettings.BuyerSpecification2DisplayName != "" ? Model.ProductBuyerSettings.BuyerSpecification2DisplayName : "Specification-2"), new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.BuyerSpecification2, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.BuyerSpecification2, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group" >
                            @Html.LabelFor(model => model.BuyerSpecification3, (Model.ProductBuyerSettings.BuyerSpecification3DisplayName != "" ? Model.ProductBuyerSettings.BuyerSpecification3DisplayName : "Specification-3"), new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.BuyerSpecification3, null, new { @class = "form-control col-xs-6 ", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.BuyerSpecification3, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" >
                            @Html.LabelFor(model => model.ProductId, "Product", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.ProductId, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.ProductId, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        var DocID = $('#SaleEnquiryHeaderId').val();
        CustomSelectFunction($("#ProductId"), '/SaleEnquiryProductMapping/GetCustomProducts', '/ComboHelpList/SetSingleProducts', ' ', false, 0, DocID);
        //CustomSelectFunction($("#SaleToBuyerId"), '/ComboHelpList/GetBuyers', '/ComboHelpList/SetSingleBuyer', ' ', false, 0);
        CustomSelectFunction($("#SaleToBuyerId"), '/SaleEnquiryProductMapping/GetCustomPerson', '/ComboHelpList/SetSinglePerson', ' ', false, 1, DocID);
    });
</script>

