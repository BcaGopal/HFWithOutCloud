    $('table.grid-table td').dblclick(function () {
        var $this = $(this);
        var row = $this.closest("tr");
        var editid = row.find('[data-name="PersonId"]').text();
        var url = '@Url.Action("Edit","Supplier")' + "/" + editid;
        window.location.href = url;
