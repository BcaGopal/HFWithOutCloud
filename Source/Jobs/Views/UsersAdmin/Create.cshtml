@model Module.Controllers.RegisterViewModel
@{
    ViewBag.Title = "";
}

@using (Html.BeginForm() )
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    
    
     <div class="panel panel-default">

        <div class="panel panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Roles</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "Create", "UsersAdmin", null, new { @class = "glyphicon glyphicon-plus toolbar", @title = "Add New", @data_toggle = "tooltip" })                   
                    @Html.ActionLink(" ", "Index", "UsersAdmin", null, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })
                </h4>
            </div>
        </div>

        <div class="panel-info" style="padding-left:15px">

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.UserName, "User Name", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.HomeTown, "Home Town", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.HomeTown, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.HomeTown, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, "Password", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, "Role Name", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.DropDownList("RoleId", "No Roles")
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>             
    </div>


