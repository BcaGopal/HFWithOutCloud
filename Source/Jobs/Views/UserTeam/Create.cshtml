@model Model.Tasks.ViewModel.UserTeamViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Post", "UserTeam", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserTeamId)

    <div class="panel panel-default">

        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> @ViewBag.UserId / @ViewBag.ProjectName / User Teams</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <div class="btn-group">
                    @Html.ActionLink(" ", "Create", "UserTeam", new { Id = ViewBag.ProjectId, UserId = ViewBag.UserId }, new { @class = "cbtn btn-circle glyphicon glyphicon-plus toolbar", @title = "Add New", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "History", "UserTeam", null, new { @class = "cbtn btn-circle glyphicon glyphicon-user toolbar", @title = "History", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "Email", "UserTeam", null, new { @class = "cbtn btn-circle glyphicon glyphicon-envelope toolbar", @title = "Email", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "PrevPage", "UserTeam", new { id = @Model.UserTeamId }, new { @class = "cbtn btn-circle glyphicon glyphicon-arrow-left toolbar", @title = "Prev Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "NextPage", "UserTeam", new { id = @Model.UserTeamId }, new { @class = "cbtn btn-circle glyphicon glyphicon-arrow-right toolbar", @title = "Next Record", @data_toggle = "tooltip" })
                    @Html.ActionLink(" ", "Index", "UserTeam", new { Id = ViewBag.ProjectId, UserId = ViewBag.UserId }, new { @class = "cbtn btn-circle glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })
                </div>
            </div>
        </div>
        <div class="panel-info" style="padding-left:15px">

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div>
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.User, "User Name", new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-7 col-sm-10">
                                @Html.TextBoxFor(m => m.User, null, new { @class = "form-control col-xs-6 required", @readonly = "true" })
                                @Html.ValidationMessageFor(m => m.User, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.ProjectId, "Project", new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-7 col-sm-10">
                                @Html.TextBoxFor(m => m.ProjectId, null, new { @class = "form-control col-xs-6 required", @readonly = "true" })
                                @Html.ValidationMessageFor(m => m.ProjectId, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Srl, "Sr", new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-7 col-sm-10">
                                @Html.TextBoxFor(m => m.Srl, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.Srl, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TeamUser, "Team User", new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-7 col-sm-10">
                                @Html.TextBoxFor(m => m.TeamUser, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.TeamUser, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">&nbsp;</div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var IsSaved=false;
    var ValidationCount=0;

    CustomSelectFunction($("#ProjectId"), '/Project/GetProject', '/Project/SetSingleProject', ' ', false, 1);
    CustomSelectFunction($("#User"), '/ComboHelpList/GetUsers', '/ComboHelpList/SetSingleUsers', ' ', false, 1);
    CustomSelectFunction($("#TeamUser"), '/ComboHelpList/GetUsers', '/ComboHelpList/SetSingleUsers', ' ', false, 1);

    $('form').submit(function(event){

        if(!IsSaved)
        {
            if(!ValidateData())
            {
                return false;
            }
            IsSaved=true;
            return IsSaved;
        }

    });


    function ValidateData() {
        var DocId=@Model.UserTeamId;
        var TempValue;
        var ValidationMessage="";

        return  (ValidationMessage=="");

    }


</script>

