@model IEnumerable<Model.ViewModel.JobOrderAmendmentWizardViewModel>
@using Core.Common

<div class="modal-content Custom-modal">
    <div class="modal-header" style="border-bottom: 1px solid #8E8888">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <span class="glyphicon glyphicon-remove"></span></button>
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Orders & Rates</span>
        </h3>
    </div>
    <div>
        <div class="form-horizontal modal-body">
            <div style="padding-right:15px">
                <div class="row">
                    <div class="form-horizontal">

                        <div class="panel panel-default" id="grid">
                            <div class="panel-heading headrow" style="background-image: -webkit-linear-gradient(top, #428bca 0%, #428bca 100%);color:white">
                                <div class="row grid-head">
                                    <div class="block text-left" style="width:5%">
                                        Srl.
                                    </div>
                                    <div class="block" style="width:92%">
                                        <div class="row">
                                            @*ProductInfo*@
                                            <div class="block" style="width:25%">
                                                Product
                                            </div>
                                            <div class="block" style="width:25%">
                                                Order
                                            </div>
                                            @*Qty*@
                                            <div class="block" style="width:20%">
                                                Job Worker
                                            </div>
                                            <div class="block text-right" style="width:15%">
                                                Old Rate
                                            </div>
                                            <div class="block text-right" style="width:15%">
                                                Rate
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="panel-info" id="gbody" style="max-height:250px;overflow-y:scroll">

                                @{var ModelData = Model.ToList();}

                                @for (int i = 0; i < ModelData.Count(); i++)
                                {
                                  
                                    @* @Html.HiddenFor(m => Model.JobInvoiceLineViewModel[i].UnitId)*@
                                    <div class='row crow grid-body' style='margin-left:0px;margin-right:0px'>
                                        <div class='block row-index' style='width:5%'>
                                            @(i + 1)
                                        </div>
                                        <div class='block pull-middle' style='width:94%'>
                                            <div class='row'>
                                                <div class='block' style='width:25%'>
                                                    <strong>@ModelData[i].ProductName</strong>
                                                    <br />
                                                    @{
                                    var Dim1 = string.IsNullOrEmpty(ModelData[i].Dimension1Name) ? "" : ModelData[i].Dimension1Name + ",";
                                    var Dim2 = string.IsNullOrEmpty(ModelData[i].Dimension2Name) ? "" : ModelData[i].Dimension2Name;
                                                    }

                                                    @Dim1 @Dim2

                                                    <div>@ModelData[i].ProductGroupName</div>
                                                </div>
                                                <div class="block" style='width:25%'>
                                                    @ModelData[i].OrderNo
                                                    <div>@ModelData[i].SOrderDate</div>
                                                </div>
                                                <div class='block' style='width:20%'>
                                                    @ModelData[i].JobWorkerName                                                    
                                                </div>
                                                <div class='block text-right' style='width:15%'>
                                                    @ModelData[i].OldRate.ToString("0.00")
                                                </div>
                                                <div class='block text-right' style='width:15%'>
                                                    @ModelData[i].Rate.ToString("0.00")
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <hr style='margin-top:0px;margin-bottom:0px' />
                                }
                            </div>
                        </div>

                        


                    </div>
                </div>
            </div>           
        </div>

    </div>
</div>