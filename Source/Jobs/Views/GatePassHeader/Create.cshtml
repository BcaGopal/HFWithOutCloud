    });





    

    function LoadProducts() {
        var groupId=@Model.GatePassHeaderId;
        var status='@Model.Status';
        var link="/GatePassLine/_Index/";
        $.ajax({
            url: link,
            type: "GET",
            data:{id:groupId,status:status},
            success: function (data) {
                $("#gbody").html(data);
            },
            error: function (result) {
                alert("Error");
            }
        });
    };
</script>


