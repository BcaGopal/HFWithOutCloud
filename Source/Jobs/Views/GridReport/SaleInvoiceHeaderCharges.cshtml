                       // UpdateDataTable(result);
                       // CaclTotal();
                    }
                    else if (!result.Success) {
                        alert('Something went wrong');
                    }
                },
                error: function () {
                    Lock: false;
                    alert('Something went wrong');
                }
            });



        }
        else {
            return false;
        }
    }





