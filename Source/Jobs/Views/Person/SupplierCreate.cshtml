@model Model.Models.Supplier
@*@model Presentation.ViewModels.BuyerViewModel*@

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()   
    @Html.BootStrapValidationSummary()
    @Html.HiddenFor(m=>m.Code)
    @Html.HiddenFor(m=>m.SalesTaxGroupPartyId)
    <div class="panel panel-default">

        <div class="panel panel-heading">

            <h4>
                <span style="font-family: Calibri,sans-serif,Verdana"> Please provide details</span>
            </h4>

        </div>
        <div class="panel panel-info" style="padding:15px">
            <div class="panel panel-info" style="padding:15px">

            </div>
                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CstNo, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CstNo)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LstNo, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LstNo)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PanNo, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PanNo)

                        </div>
                    </div>
                                          
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m=>m.Phone)
                            @Html.ValidationMessageFor(m=>m.Phone)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Mobile, new { @class="control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(m=>m.Mobile)
                            @Html.ValidationMessageFor(m=>m.Mobile)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class="control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(m=>m.Email)
                            @Html.ValidationMessageFor(m=>m.Email)
                        </div>
                    </div>
                    

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </div>
    </div>
  }

