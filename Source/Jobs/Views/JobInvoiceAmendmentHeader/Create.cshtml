        var LineDeleteUrl;
        if(status==StatusContstantsEnum.Drafted)
        {
            LineEditUrl="/JobInvoiceRateAmendmentLine/_ModifyLine/";
            LineDeleteUrl="/JobInvoiceRateAmendmentLine/_DeleteLine/";
        }
        else if(status==StatusContstantsEnum.Submitted || status == StatusContstantsEnum.Modified)
        {
            LineEditUrl="/JobInvoiceRateAmendmentLine/_ModifyLineAfterSubmit/";
            LineDeleteUrl="/JobInvoiceRateAmendmentLine/_DeleteLine_AfterSubmit/";
        }
        else if(status==StatusContstantsEnum.Approved)
        {
            LineEditUrl="/JobInvoiceRateAmendmentLine/_ModifyLineAfterApprove/";
            LineDeleteUrl="/JobInvoiceRateAmendmentLine/_DeleteLine_AfterApprove/";
        }
        var link="/JobInvoiceRateAmendmentLine/Index/"+groupId;
        var QtyCount=0;
        var DealQtyCount=0;
        var AmountCount=0;
        var unit=true;
        var dunit=true;
        var prevunit;
        var prevdunit;
        var decimal=0;
        var DUdecimal=0;
        $.ajax({
            url: link,
            type: "GET",
            success: function (data) {
                var row = ""
                var srno=1;

                if(data.length!=0)
                {
                    $.each(data, function (index, item) {

                        var InvoiceUrl=DomainName+"/Redirect/RedirectToDocument?DocTypeId="+item.InvoiceDocTypeId+"&DocId="+item.InvoiceHeaderId+"&DocLineId="+item.JobInvoiceLineId;
                        var BarCodeUrl=DomainName+"/Redirect/BarCodeDetail?BarCode="+item.ProductUidName;

