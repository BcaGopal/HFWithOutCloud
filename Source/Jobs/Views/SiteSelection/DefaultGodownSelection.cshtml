@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>SiteSelection</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/select2.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
</head>
<body>
    <style>
    </style>
    <link href="~/Content/AdminLTEBoxContainer.css" rel="stylesheet" />
    <div class="container">
        <legend class="text-center">Choose Default Godown</legend>
        <div class="box">
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("DefaultGodownSelection", "SiteSelection", FormMethod.Post, new { @class = "form-horizontal" }))
            {  @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        @Html.Label(((Model.ViewModel.CompanySettingsViewModel)Session["CompanySettings"]).GodownCaption ?? "Godown", new { @class = "control-label col-sm-2", @style = "padding-top:8px;" })
                        <div class="col-sm-10">
                            @Html.DropDownList("DefaultGodownId", new SelectList(ViewBag.GodownList as System.Collections.IEnumerable, "GodownId", "GodownName", ViewBag.GodownId), new { @class = "form-control required" })
                        </div>
                    </div>                 
                </div>
                <!-- /.box-body -->
                <div class="box-footer with-border">
                    <button type="submit" class="btn btn-success center-block">continue</button>
                </div>
                <!-- /.box-footer -->
            }


            <form class="form-horizontal"></form>
        </div>
    </div>
</body>
</html>


<script type="text/javascript">
    $(document).ready(function () { $("#DefaultGodownId").select2(); });
</script>