<script type="text/javascript">

    $(document).ready(function () {
        CustomSelectFunction($("#SupplierId"), '/ComboHelpList/GetSuppliers', '/ComboHelpList/SetSingleSupplier', ' ', false, 1);
        //Calling the function to load the table data/ Line information
        LoadProducts();

        var id=@Model.PurchaseOrderAmendmentHeaderId;

        LoadCharges(id,"Web.PurchaseOrderAmendmentHeaderCharges","Web.PurchaseOrderRateAmendmentLineCharges","/TaxCalculation/GetPOAHeaderChargeForEdit/");

        //Adding Hidden Input Fields
        AddFields();

    });


    var id=@Model.PurchaseOrderAmendmentHeaderId;
    if(id==null||id<=0)
    {
        $(document).find('a#btnCreate').removeAttr('href').removeAttr('data-modal');
        $("#btnCreateF").attr('disabled','disabled');
    }



    function LoadProducts() {
        var groupId=@Model.PurchaseOrderAmendmentHeaderId;
        var status='@Model.Status';
        var LineEditUrl;
        var LineDeleteUrl;
        if(status==StatusContstantsEnum.Drafted)
        {
            LineEditUrl="/PurchaseOrderRateAmendmentLine/_ModifyLine/";
            LineDeleteUrl="/PurchaseOrderRateAmendmentLine/_DeleteLine/";
        }
        else if(status==StatusContstantsEnum.Submitted || status == StatusContstantsEnum.Modified)
        {
            LineEditUrl="/PurchaseOrderRateAmendmentLine/_ModifyLineAfterSubmit/";
            LineDeleteUrl="/PurchaseOrderRateAmendmentLine/_DeleteLine_AfterSubmit/";
        }
        else if(status==StatusContstantsEnum.Approved)
        {
            LineEditUrl="/PurchaseOrderRateAmendmentLine/_Detail/";
            LineDeleteUrl="/PurchaseOrderRateAmendmentLine/_Detail/";
        }
        var link="/PurchaseOrderRateAmendmentLine/Index/"+groupId;
        var QtyCount=0;
        var DealQtyCount=0;
        var AmountCount=0;
        var unit=true;
        var dunit=true;
        var prevunit;
        var prevdunit;
        var decimal=0;
        var DUdecimal=0;
        $.ajax({
            url: link,
            type: "GET",
            success: function (data) {
                var row = ""
                var srno=1;

                if(data.length!=0)
                {
                    $.each(data, function (index, item) {
                        row += " <div class='row crow grid-body' style='margin-left:0px;margin-right:0px'>"
                            +"      <div class='row-index block'  style='width:5%'>"+srno+"<input type='hidden' class='id' value='"+item.PurchaseOrderLineId+"' /></div>"
                            +"          <div class='block'  style='width:90%'>"
                            +"              <div class='row'>"
                            +"                  <div class='block' style='width:23%'>"+(item.ProductName==null?" ":"<strong>"+item.ProductName+"</strong>")
                            +"                      <div>"+(item.Specification==null?" ":item.Specification)+"</div>"
                            +"                          <div>"+(item.Dimension1Name==null?" ":item.Dimension1Name+",")+(item.Dimension2Name==null?" ":item.Dimension2Name)+"</div>"
