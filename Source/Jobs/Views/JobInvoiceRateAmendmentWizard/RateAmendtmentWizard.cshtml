<script type="text/javascript">
  
    $(document).ready(function () {

        var selected = [];
        var Id = '@ViewBag.Id';
        var ProcId = '@ViewBag.ProcessId';
        var Filters = new AssignFilters();
        var eXRate = 0;


        var tab = $('#example').DataTable({
