    function LoadProducts() {
        var groupId='@Model.StockHeaderId';
        var status='@Model.Status';
        var LineEditUrl;
        var LineDeleteUrl;
        if(status==StatusContstantsEnum.Drafted||status==StatusContstantsEnum.Import)
        {
            LineEditUrl="/StockLine/_ModifyLine/";
            LineDeleteUrl="/StockLine/_DeleteLine/";
        }
        else if(status==StatusContstantsEnum.Submitted || status == StatusContstantsEnum.Modified )
        {
            LineEditUrl="/StockLine/_ModifyLineAfterSubmit/";
            LineDeleteUrl="/StockLine/_DeleteLine_AfterSubmit/";
        }
        else
        {
            LineEditUrl="/StockLine/_Detail/";
            LineDeleteUrl="/StockLine/_Detail/";
        }        
        var RateVisible='@Model.StockHeaderSettings.isVisibleRate';
        var link="/StockLine/Index/"+groupId;
        var QtyCount=0;
        var DealQtyCount=0;
        var AmountCount=0;
        var unit=true;
        var dunit=true;
        var prevunit;
        var prevdunit;
        var decimal=0;
        var DUdecimal=0;
        $.ajax({
            url: link,
            type: "GET",
            success: function (data) {
                var row = ""
                var srno=1;

                if(data.length!=0)
                {


                    if(RateVisible=="True")
                    {
                        $.each(data, function (index, item) {
                            row += " <div class='row crow grid-body' style='margin-left:0px;margin-right:0px'>"
                                +"      <div class='row-index block'  style='width:5%'>"+srno+"<input type='hidden' class='id' value='"+item.StockLineId+"' /></div>"
