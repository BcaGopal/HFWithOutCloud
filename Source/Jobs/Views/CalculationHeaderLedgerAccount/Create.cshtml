                                <h4 class="col-md-12 black" style="margin-top:15px">
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                    1.Header Ledger Accounts
                                </h4>
                            </div>

                            <div class="panel-info">
                                <h5 style="padding:5px 0 3px 0;margin:0px;font-weight:bold">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                   @* @Html.ActionLink("Add New Row ", "_Create", "CalculationHeaderLedgerAccount", new { CalculationId = @Model.CalculationId,DocTypeId=@Model.DocTypeId }, new { data_modal = "", @id = "btnCreateP", @class = "toolbar", @title = "Add New", @data_toggle = "tooltip" })*@
                                </h5>
                            </div>
                            <div style="padding-right:15px">


                                <div class="panel panel-default" id="grid">
                                    <div class="panel-heading headrow" style="background-image: -webkit-linear-gradient(top, #428bca 0%, #428bca 100%);color:white">
                                        <div class="row grid-head">
