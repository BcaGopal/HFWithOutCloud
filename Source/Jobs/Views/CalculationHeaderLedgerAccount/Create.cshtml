                                                Srl.
                                            </div>
                                            <div class="col-xs-10">
                                                <div class="row">
                                                    @*ProductInfo*@
                                                    <div class="col-sm-3">
                                                        Calculation Footer
                                                    </div>
                                                    @*Qty*@
                                                    <div class="col-sm-3">
                                                        Ledger Acc Cr
                                                    </div>
                                                    @*Rate*@
                                                    <div class="col-sm-3">
                                                        Ledger Acc Dr
                                                    </div>
                                                    @*Amount*@
                                                    <div class="col-sm-3">
