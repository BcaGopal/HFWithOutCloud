                                <div class="col-xs-6">
                                    @Html.TextBoxFor(m => m.CalculationId, null, new { @class = "form-control col-xs-6 required" })
                                    @Html.ValidationMessageFor(m => m.CalculationId, null, new { @class = "text-danger" })
