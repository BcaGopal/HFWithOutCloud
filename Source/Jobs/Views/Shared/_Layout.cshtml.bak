    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'dd/MM/yyyy',
            "setDate": new Date(),
            "autoclose": true

        })

        $('.datepickerWithNFD').datepicker({
            format: 'dd/MM/yyyy',
            "setDate": new Date(),
            "autoclose": true,
            "endDate": new Date(),

        })

        $('.datepicker,.datepickerWithNFD').each(function () {

            if (($(this).val())) {
                var date = new Date($(this).val())
                if (date.getDay() == 0)
                    $(this).addClass('DateSunday');
                else {
                    if ($(this).hasClass('DateSunday'))
                        $(this).removeClass('DateSunday');
                }
            }
        })

        $('.datepicker,.datepickerWithNFD').datepicker().on('changeDate', function () {
            if (($(this).val())) {
                var date = new Date($(this).val())
                if (date.getDay() == 0)
                    $(this).addClass('DateSunday');
                else {
                    if ($(this).hasClass('DateSunday'))
                        $(this).removeClass('DateSunday');
                }
            }

            var EntryMode = '@ViewBag.Mode';
            if (($(this).val()) && EntryMode == "Add" && $(this).hasClass('updateDocNo')) {
                $.get("/GetNewDocNo/GetNewDocNo", {
                    table: $(this).data('tabl'), doctype: $(this).data('doctype'), division: parseInt($(this).data('divid')), site: parseInt($(this).data('sitid')), date: $(this).val()
                }, function (data, stat, xhr) {
                    $('#DocNo').val(data.returnvalue);
                })
            }
        })
        $(function () {
            $("body").CustomNotify();
        });
    </script>

