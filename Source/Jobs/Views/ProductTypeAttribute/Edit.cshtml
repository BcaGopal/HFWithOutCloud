@model Surya.India.Model.Models.ProductTypeAttribute

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">

        <div class="panel-heading">

