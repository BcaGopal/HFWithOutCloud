                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.IsMandatory, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.IsMandatory)
                        @Html.ValidationMessageFor(m => m.IsMandatory)
                    </div>
                </div>

                <div class="form-group" style="margin-top:15px">
                    @Html.LabelFor(model => model.DataType, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.DataType, new SelectList(ViewBag.DataType as System.Collections.IEnumerable, "Value", "Text"))
