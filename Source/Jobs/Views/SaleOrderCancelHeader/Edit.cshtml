                                        @Html.DropDownListFor(m => m.SaleOrderCancelHeaderDetailsViewModel.ReasonId, new SelectList(ViewBag.ReasonList as System.Collections.IEnumerable, "ReasonId", "ReasonName"), new { @class = "form-control col-xs-6 height required" })
