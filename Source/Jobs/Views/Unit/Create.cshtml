@model Presentation.ViewModels.UnitViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Unit.IsActive)
    <div class="panel panel-default">

        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Unit</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "Index", "Unit", null, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })                  
                </h4>
            </div>

        </div>
        <div class="panel-info" style="padding-left:15px">


            <div class="form-horizontal">
                
                @Html.ValidationSummary(true)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.LabelFor(model => model.Unit.UnitId, "Code", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.UnitId, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.Unit.UnitId, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.UnitName, "Unit Name", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.UnitName, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.Unit.UnitName, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.DecimalPlaces, "Decimal Places", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.DecimalPlaces, null, new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessageFor(m => m.Unit.DecimalPlaces, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.Symbol, "Symbol", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.Symbol, null, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.Unit.Symbol, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.FractionName, "Fraction Name", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.FractionName, null, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.Unit.FractionName, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.FractionUnits, "Fraction Units", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.FractionUnits, null, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.Unit.FractionUnits, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Unit.FractionSymbol, "Fraction Symbol", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Unit.FractionSymbol, null, new { @class = "form-control col-xs-6" })
                                @Html.ValidationMessageFor(m => m.Unit.FractionSymbol, null, new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>


                @*<hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary btn-sm CurveBorder height" style=" border-color: #606264" />
                    </div>
                </div>*@
            </div>
        </div>
    </div>

}
