@model Components.Logging.ActiivtyLogViewModel

<div class="modal-content">
    <div class="modal-header" style="border-bottom: 1px solid #8E8888">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <span class="glyphicon glyphicon-remove"></span></button>
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Please specify a reason</span>
        </h3>
    </div>
    <div>
        @using (Html.BeginForm("PostLogReason", "ActivityLog", FormMethod.Post, new { @class = "modal-form RReasonModal", id = "modformr" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">

                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserRemark, "Remark", new { @class = "control-label col-xs-2 " })
                            <div class="col-xs-9">
                                @Html.TextAreaFor(m => m.UserRemark, 4, 2, new { @class = "form-control col-xs-9 required" })
                                @Html.ValidationMessageFor(m => m.UserRemark, "", new { @class="text-danger"})
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer " style="padding: 19px 20px 0 20px; border-top:1px solid #8E8888">                    
                    <button class="btn custom" name="Command:Edit" type="submit"><h2 style="margin:0px" id="submit"><span class="glyphicon glyphicon-arrow-right black"></span> </h2></button>
                </div>
            </div>
        }
    </div>
</div>
